<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".ui.activities.SignUpActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/russo_one"
        android:gravity="center"
        android:text="Регистрация"
        android:textSize="26dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/complete_sign_up_button"
        app:layout_constraintStart_toStartOf="@+id/complete_sign_up_button"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/email_sign_up_et"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/russo_one"
            android:gravity="right"
            android:hint="Почта"
            android:inputType="textEmailAddress"
            android:maxLines="2"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:backgroundTint="@color/colorAccent"
            />

        <EditText
            android:id="@+id/login_et"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/russo_one"
            android:gravity="right"
            android:hint="Логин"
            android:maxLines="2"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:backgroundTint="@color/colorAccent"
            />

        <EditText
            android:id="@+id/password_sign_up_et"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/russo_one"
            android:gravity="right"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:maxLines="2"
            android:textColorHint="@color/colorAccent"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            />

        <EditText
            android:id="@+id/password_confirm_et"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/russo_one"
            android:gravity="right"
            android:hint="Подтвердите пароль"
            android:inputType="textPassword"
            android:maxLines="2"
            android:textColorHint="@color/colorAccent"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>

    <Button
        android:id="@+id/complete_sign_up_button"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/russo_one"
        android:text="Зарегистрироваться"
        android:onClick="register"
        android:background="@drawable/button_style"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.305" />


</androidx.constraintlayout.widget.ConstraintLayout>